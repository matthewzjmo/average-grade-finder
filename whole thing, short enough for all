//global variables

#include <iostream>
#include <vector>
#include <string>
using namespace std;
bool run = true;
float lowest_grade;
float highest_grade;
float average_grade;
int number_of_grades;
vector <int> grade_record;

//add grade functtion
void add_grade() {
    float new_grade;
    cout << "what is the new grade?";
    cin >> new_grade;
    //pushes new array to the back of the line
    grade_record.push_back(new_grade);
}
void calculate_grade() {
    lowest_grade = grade_record.at(0);
    highest_grade = grade_record.at(0);
    int sum_of_grades = 0;
    for(int i = 0; i < number_of_grades; i++) {
        if (grade_record.at(i) < lowest_grade) {
            lowest_grade = grade_record.at(i);
            //finds array with key i to return actual grade value
        }
        if (grade_record.at(i) > highest_grade) {
            highest_grade = grade_record.at(i);
        }
        sum_of_grades += grade_record.at(i);
    }
    average_grade = sum_of_grades/number_of_grades;
}

void display_grade() {
    cout << lowest_grade << endl << highest_grade << endl << average_grade << endl;
}
//main func
int main() {
    char choice;
    while (run) {
        cout << "What would you like to do? Add or Display grades(A,D)? \n";
        cin >> choice;
        if (choice == 'A') {
            number_of_grades++ ;
            add_grade();
        } else if (choice == 'D') {
            calculate_grade();
            display_grade();
        } else {
            cout << "invalid option";
        }
    }
}
